<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
            <label>Image</label>
        <div class="field">
            <input type="text" name="blog[image]" placeholder="Image Url" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea required name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui violet inverted button">Submit</button>
    </form>
</div>

<% include partials/footer %>
